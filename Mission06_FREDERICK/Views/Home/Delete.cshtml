@model Movie
@{
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Confirm Deletion</h2>
    <h3>Are you sure you want to delete the record for "@Model.Title"?</h3>

    <form method="post">
        <input type="hidden" asp-for="MovieId" />
        
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="movieList" class="btn btn-secondary">Cancel</a>
    </form>
</div>